{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "rootDir": "./src"
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "./deploy/",
    "./logs/",
    "./node_modules/",
    "./public/",
    "./rpi/",
    "./screenshots/",
    "./views/"
  ],
  "typeRoots": [
    "./src/types",
    "./node_modules/@types"
  ]
}
